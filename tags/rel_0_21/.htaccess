DirectoryIndex index.php
AddDefaultCharset windows-1251

Options -Indexes
Options FollowSymLinks

php_flag register_globals off
php_flag magic_quotes_gpc off

#php_value error_reporting 0
#php_flag display_errors Off

RewriteEngine On


#This configs not match with source directory name
#So we need special setup
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-l
RewriteRule ^bulldoc_site/(.+)\.(jp?g|png|gif|txt)$ workshop/source/bulldoc_book/pages/$1.$2 [L,QSA]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-l
RewriteRule ^bulldoc_chm/(.+)\.(jp?g|png|gif|txt)$ workshop/source/bulldoc_book/pages/$1.$2 [L,QSA]

#General config
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-l
RewriteRule ^([^/]+)/(.+)\.(jp?g|png|gif|txt)$ workshop/source/$1/pages/$2.$3 [L,QSA]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-l
RewriteRule ^(.+)$ index.php?colesoRequestPath=$1 [L,QSA]
